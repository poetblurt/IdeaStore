@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/banner1.png" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Store and share your ideas
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner2.png" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Find something to overcome bordom
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner3.png" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Became rich startup owner
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="container search-panel">
    <div class="form-group has-feedback has-search">
        <span class="glyphicon glyphicon-search form-control-feedback"></span>
        <input type="text" class="form-control" placeholder="Search">
    </div>
    <div class="dropdown">
        <button class="btn btn-default dropdown-toggle btn-block" type="button" data-toggle="dropdown">
            Category
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
            <li><input type="checkbox" class="category-checkbox"/>Hobby</li>
            <li><input type="checkbox" class="category-checkbox"/>Time management</li>
            <li><input type="checkbox" class="category-checkbox"/>Health and Wellness</li>
        </ul>
    </div>
    <div class="dropdown">
        <button class="btn btn-default dropdown-toggle btn-block" type="button" data-toggle="dropdown">
            Sort by
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
            <li><a href="#">Name</a></li>
            <li><a href="#">Popularity</a></li>
            <li><a href="#">Rate</a></li>
        </ul>
    </div>
</div>

<div class="container idea-grid">
    <div class="row">
        <div class="col-md-4">
            <div class="idea-icon">
                <p>Do nothing</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="idea-icon">
                <p>Keep smile</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="idea-icon">
                <p>Don't give up</p>
            </div>
        </div>
    </div>
</div>